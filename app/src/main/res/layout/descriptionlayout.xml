<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"/>
<LinearLayout
    android:background="@drawable/shape2"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_margin="7dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Around the world, Mercedes-Benz is synonymous with automotive excellence. Our award-winning vehicles combine exemplary performance and class-leading luxury with impeccable safety standards and outstanding environmental credentials.
What’s more, they offer low whole life costs and exceptional write-down values, making them the perfect solution to any company car driver’s needs."
        android:textSize="15dp"/>

</LinearLayout>
     <TextView android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="1. Extensive range of vehicles"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="2.Outstanding cost efficiency"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="3.Class leading safety"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="4.Strong residual values"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="5.Expertise and Flexibility"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="6.Less Parking Space"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="60dp">
        <TextView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="17dp"
            android:text="Ex- Showroom Price"/>
        <TextView
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="1,29,33,800"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="Fuel type"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Petrol"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="Top Speed"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="250kmph"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="No. of Cyliners "/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="Gear Transmission"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="Automatic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="Fuel Capacity "/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:text="801"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>